<Page
    x:Class="CS3230RentalSystemProject.View.FurnitureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CS3230RentalSystemProject.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="755" Height="605">

    <Grid HorizontalAlignment="Left" Width="750">
        <TextBlock x:ConnectionId='2' x:Name="employeeName" HorizontalAlignment="Left" Margin="15,87,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" Height="55" FontWeight="Bold" TextAlignment="Start" FontFamily="SimSun" FontSize="16"  Style="{ThemeResource SubheaderTextBlockStyle}" Foreground="#FFB03636"/>
        <TextBlock HorizontalAlignment="Left" Margin="197,21,0,0" Text="Furniture Information" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="351" Foreground="#FF1A6DA6" FontSize="36" FontFamily="Bahnschrift Condensed"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,167,0,0" Text="Furniture Name: " TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,227,0,0" Text="Furniture Style:" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,282,0,0" Text="Furniture Catagory: " TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,342,0,0" Text="Furniture Price:" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,397,0,0" Text="Furniture Quantity:" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,455,0,0" Text="Furniture Availability:" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="225" FontFamily="Arial" FontSize="24" TextAlignment="Right"/>
        <TextBlock x:ConnectionId='3' x:Name="name" HorizontalAlignment="Left" Margin="277,167,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='4' x:Name="style" HorizontalAlignment="Left" Margin="277,222,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='5' x:Name="category" HorizontalAlignment="Left" Margin="277,282,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='6' x:Name="price" HorizontalAlignment="Left" Margin="277,342,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='7' x:Name="quantity" HorizontalAlignment="Left" Margin="277,397,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" FocusVisualPrimaryBrush="{x:Null}" Foreground="#FFA00C0C">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='8' x:Name="availabilty" HorizontalAlignment="Left" Margin="277,452,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="430" FontFamily="Arial" FontSize="24" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="#FF890D0D">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0.011"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:ConnectionId='9' x:Name="OKButton" Content="OK" Margin="535,550,0,0" VerticalAlignment="Top" Width="120"                       />

    </Grid>
</Page>

