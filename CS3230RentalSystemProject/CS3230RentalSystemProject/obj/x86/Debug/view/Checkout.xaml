<Page
    x:Class="CS3230RentalSystemProject.View.Checkout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CS3230RentalSystemProject.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="490" Width="720">

    <Grid Height="500" VerticalAlignment="Center">
        <ListBox x:ConnectionId='2' x:Name="furnitureList" Margin="45,75,50,100">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding FurnitureName}" HorizontalAlignment="Left" />
                        <ComboBox Grid.Column="1" ItemsSource= "{Binding fakeQuantity}" SelectedItem="{Binding rentQuantity}" HorizontalAlignment="Left" />

                        <Button x:ConnectionId='7' x:Name="warningButton" Tag="{Binding FurnitureID}" Content="Remove" Grid.Column="2" Width="80" Height="30" Foreground="#FF9C0E0E" FontSize="14"                            HorizontalAlignment="Left">
                        </Button>
                    </Grid>


                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Template>
                <ControlTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="180" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0">
                                <TextBlock FontWeight="Bold" HorizontalAlignment="Left">Furniture Name</TextBlock>
                            </Border>
                            <Border Grid.Column="1">
                                <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Quantity</TextBlock>
                            </Border>
                            <Border  Grid.Column="2">
                                <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Action</TextBlock>
                            </Border>
                        </Grid>
                        <ItemsPresenter Grid.Row="1"></ItemsPresenter>
                    </Grid>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>

        <TextBlock x:ConnectionId='3' x:Name="employeeName" HorizontalAlignment="Left" Margin="20,20,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" Height="51" FontWeight="Bold" TextAlignment="Start" FontFamily="SimSun" FontSize="16"  Style="{ThemeResource SubheaderTextBlockStyle}" Foreground="#FFB03636"/>
        <Button x:ConnectionId='4' Content="Checkout" Margin="390,405,0,0" VerticalAlignment="Top" Height="55" Width="170" FontSize="36"                        Grid.ColumnSpan="2"/>
        <Button x:ConnectionId='5' Content="Cancel" Margin="195,405,0,0" VerticalAlignment="Top" Height="55" Width="165" FontSize="36"                     />

    </Grid>
</Page>

